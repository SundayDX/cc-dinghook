# Environment Configuration
# Copy this file to .env and fill in your values

# DingTalk Webhook URL
# Get this from your DingTalk group robot settings
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=YOUR_ACCESS_TOKEN

# Optional: Secret for security (recommended)
DINGTALK_SECRET=YOUR_SECRET

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Claude Code hook events to capture
HOOK_EVENTS=execution_complete

# Message template customization
MESSAGE_TITLE=Claude Code Execution Complete
INCLUDE_DURATION=true
INCLUDE_EXIT_CODE=true